<div class="registration_contents">
  
  <%= form_with model: @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :content %>
    <%= f.text_area :content, size: "50x20"%>

    <%= f.submit "投稿", class: "actions"  %>
  <% end %>
</div>

<% if @post.errors.any? %>
  <%= javascript_pack_tag 'posts/new' %>
<% end %>
