<div class="registration_contents">
  <h2>パスワード変更</h2>

  <%= form_with model: @user, url: user_password_path, method: :patch do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, "新パスワード" %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "パスワード確認" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <%= f.submit "パスワード変更", class: "actions" %>
  
  <% end %>

  <%= render "devise/shared/links" %>
</div>
