<div class="registration_contents">
  <h2>サインアップ</h2>

  <%= form_with model: @user, url: user_registration_path do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :username %><br />
      <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <%= f.check_box :agreement, as: :boolean, checked:false, id: 'agreement', class: "agreement" %>
    <p><%= link_to '利用規約', page_path('terms') %>と
    <%= link_to 'プライバシーポリシー', page_path('privacy_policy') %>に同意する</p>
    
    <%= f.submit "サインアップ", class: "actions" %>
    
  <% end %>

  <% if user_signed_in? %>
    <%=link_to "ログアウト", destroy_user_session_path, method: :delete%>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>

<% if @user.errors.any? %>
  <%= javascript_pack_tag 'users/sign_up_render' %>
<% end %>
    