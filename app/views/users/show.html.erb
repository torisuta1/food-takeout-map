<div class="post-wrapper">
  <div class="box B_2"> 
    <h2>ユーザー詳細</h2>
    <p>いいねしている投稿</p>
    <% @user.liked_posts.each do |post| %>
      <p>タイトル:&ensp;<%= post.title %></p>
      <p>レビュー:&ensp;<%= post.content %></p>
    <% end %>
    <p>--------------------------------------------------------------------------------------------------------------------------------------------------------</p>
    <p>ユーザーネーム:&ensp;<%= @user.username %><br></p>
    <p>プロフィール:<br><%= @user.profile %></p>
    <p>--------------------------------------------------------------------------------------------------------------------------------------------------------</p>
    <%= render 'user_posts' %>
    
    <%= paginate @posts %>
  </div>
</div>