<% if user_signed_in? && current_user != user %> 
 <% if current_user.relationships.exists?(follow_id: user.id) %>
    <%= form_with model: @relationship, url: user_relationship_path(user), method: :delete do |f| %>
      <% f.hidden_field :follow_id, value: user.id %>
      <% f.submit "フォロー解除" %>
    <% end %>
  <% else %>
    <%= form_with model: @set_relationship, url: user_relationship_path(user) do |f| %>
      <% f.hidden_field :follow_id, value: user.id %>
      <% f.submit "フォロー" %>
    <% end %>
  <% end %>
<% end %>